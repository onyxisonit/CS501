id/sub_button"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:layout_marginEnd="5dp"            android:text="-"            android:textSize="30dp" />        <Button            android:id="@+id/mul_button"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:layout_marginEnd="5dp"            android:text="*"            android:textSize="30dp" />        <Button            android:id="@+id/div_button"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:layout_marginEnd="5dp"            android:text="/"            android:textSize="30dp" />        <Button            android:id="@+id/mod_button"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:layout_marginEnd="5dp"            android:text="%"            android:textSize="30dp" />    </LinearLayout>    <TextView        android:id="@+id/output"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginTop="40dp"        android:gravity="center"        android:textSize="20dp"/></LinearLayout><!--</androidx.constraintlayout.widget.ConstraintLayout>-->